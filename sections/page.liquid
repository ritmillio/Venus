<div class="container mx-auto max-w-3xl px-4 py-8">
  <h2 class="text-3xl md:text-4xl font-bold text-center">
      {{ section.settings.page.title | escape }}
  </h2>
  <div class="mt-12 prose-sm md:prose max-w-full md:max-w-full">
      {{ section.settings.page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.page.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.page.settings.page.label"
    }
  ],
  "presets": [
    {
      "name": "t:sections.page.presets.name"
    }
  ]
}
{% endschema %}
