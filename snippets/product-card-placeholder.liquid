{% comment %}
    Renders a product card placeholder

    Usage:
    {% render 'product-card-placeholder' %}
{% endcomment %}

<div class="card-wrapper">
  <a class="absolute inset-0 z-20"><span class="visually-hidden">{{ 'onboarding.product_title' | t }}</span></a>

  <div class="card-information">
    <div class="card-information__wrapper">
      <span class="visually-hidden border-0 h-px -m-px overflow-hidden p-0 absolute w-px border-0 h-px -m-px overflow-hidden p-0 absolute w-px">{{ 'accessibility.vendor' | t }}</span>
      <div class="caption-with-letter-spacing text-base uppercase tracking-widest opacity-70">{{ 'products.product.vendor' | t }}</div>
      {% render 'price' %}
    </div>
  </div>

  <div class="card card--text-only card--soft card--product">
    <div class="card__inner">
      <div class="card__content"><h2 class="card__text h3">{{ 'onboarding.product_title' | t }}</h2></div>
    </div>
  </div>  
</div>
